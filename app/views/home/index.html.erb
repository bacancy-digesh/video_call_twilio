<%= form_for @session , url:create_session_path do |f| %> 
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: 'Title' %>
    <%= f.label :description %>
    <%= f.text_field :description, placeholder: 'Description' %>
    <%= f.submit 'Submit' %>
<%end%>
<br>
