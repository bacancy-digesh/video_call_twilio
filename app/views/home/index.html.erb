<h2>All Sessions</h2>
<table>
    <tr>
        <th>Title</th>
        <th>Description</th>
    </tr>
    <% @sessions.each do |session|%>
    <tr>
        <td><%= session.title%></td>
        <td><%=session.description%></td>
        <td><%= link_to "participate", user_participate_path(session)%>
    </tr>
    <%end%>
</table>

